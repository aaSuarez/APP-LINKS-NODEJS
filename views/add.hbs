<div class="container p-4"></div>
<div class="row ">
    <div class="col-md-4 mx-auto">
        <div class="card mt-5 ">
            <div class="card-body">
                <form action="/links/add" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="title" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="url" name="url" placeholder="URl" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-block btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>